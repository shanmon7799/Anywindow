.container-windows-full {
  background-color: #EFF3F4;
  width: 100%;
  height: 180vh;
}

.search-info {
  width: 100%;
  height: 260px;
  background-color: #274AB4;
}

.search-info h2 {
  font-family: SourceHanSansTWHK-Medium;
  font-size: 36px;
  color: #FFFFFF;
  letter-spacing: 0.5px;
  margin: 0;
  text-align: center;
  padding-top: 120px;
}

.search-bar {
  text-align: center;
}

.search-bar input[type=text] {
    opacity: 0.5;
    border: 1px solid #FFFFFF;
    border-radius: 50px;
    width: 360px;
    height: 42px;
    font-family: SourceHanSansTWHK-Normal;
    font-size: 14px;
    color: rgba(255,255,255,0.8);
    letter-spacing: 0px;
    background-color: #274AB4;
    background-image: url(asset_path("search_icon.png"));
    background-position: 320px;
    background-repeat: no-repeat;
    margin-top: 24px;
    padding-left: 20px;
}

.container-windows {
  width: 1050px;
  margin: 0 auto;
  padding-top: 60px;
}

.search-window
{
  width: 316px;
  margin: 16px;
  display: flex;
}

.search-window-words {
  position: absolute;
  color: #FFFFFF;
  text-align: center;
  align-self: center;
  width: inherit;
}

.search-window-city {
  font-family: SourceHanSansTWHK-Medium;
  font-size: 36px;
  letter-spacing: 0px;
}

.search-window-country {
  font-family: SourceHanSansTWHK-Normal;
  font-size: 14px;
  letter-spacing: 0.5px;
  line-height: 28px;
}

.search-window-img img {
  width: 316px;
  height: 344px;
}