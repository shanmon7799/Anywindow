<h1>Window Name: <%= @window.name %></h1>
<h2>location: <%= "#{@window.latitude}, #{@window.longitude}" %></h2>
<h2>Provider_name: <%= @window.provider_name %> </h2>
<h2>Provider_service: <%= @window.provider_service%> </h2>
<h2>Provider_url: <%= @window.provider_url %></h2>

<div>
<h2>Window Images</h2>
<% @window.images.each do |image| %>
  <%= image_tag (image.image.url(:medium))%>
<% end %>
</div>

<div>
<h2>Provider_pic</h2>
  <% if @window.provider_pic.exists? %>
    <%= image_tag (@window.provider_pic.url)%>
  <% end %>
</div>

<div>
<h2>City Images</h2>
  <% if @window.city.image.exists? %>
    <%= image_tag (@window.city.image.url)%>
  <% end %>
</div>

<div>
<h2>Audios</h2>
<% @window.audios.each do |audio| %>
	<p> 檔案名稱：<%= audio.audio_file_name %></p>
	<audio controls>
  	<source src="<%=audio.audio.url%>" type="audio/mpeg">
		Your browser does not support the audio element.
	</audio>
<% end %>
</div>

<div>
<h2>Videos</h2>
<% @window.videos.each do |video| %>
  <p> 檔案名稱：<%= video.video_file_name %></p>
  <video width="400" height="400" controls>
  <source src="<%=video.video.url%>" type="video/mp4">
  </video>
<% end %>
</div>

<hr>
<div class="btn-group">
  <%= link_to "Back", admin_windows_path, class:"btn btn-info"%>
  <%= link_to "Edit", edit_admin_window_path(@window), class:"btn btn-warning" %>
</div>