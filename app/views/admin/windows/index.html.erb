<h1> Welcome Admin Interface</h1>
<h2><%= link_to "All Users", admin_users_path%></h2>
<br>

<h1>All Windows</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <td>名稱</td>
      <td>瀏覽數</td>
    </tr>
  </thead>
  <tbody>
  	<% @windows.each do |window|%>
	  	<tr>
	  		<th>window.name</th>
	  		<th>window.page_views</th>
	  	</tr>
	  <% end %>
  </tbody>
</table>

<h1>All Cities</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <td>名稱</td>
    </tr>
  </thead>
  <tbody>
  	<% @cities.each do |city|%>
	  	<tr>
	  		<th>city.name</th>
	  	</tr>
	  <% end %>
  </tbody>
</table>

<h1>All Countries</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <td>名稱</td>
    </tr>
  </thead>
  <tbody>
  	<% @countries.each do |country|%>
	  	<tr>
	  		<th>country.name</th>
	  	</tr>
	  <% end %>
  </tbody>
</table>

<hr>
<%= link_to "Back to windows", windows_path, class:"btn btn-info"%>