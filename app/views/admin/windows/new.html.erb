<h1>新增地方</h1>
<hr>
<%= form_for [:admin, @window],html: { multipart: true } do |w| %>

  <%= render :partial => 'form', :locals => { :w => w } %>

  <div class="form-group">
    <%= fields_for @city do |city| %>
      <%= city.label :name, "City" %>
      <%= city.text_field :name %>
      <%#= city.select :name, City.all.map{ |c| [c.name, c.name] }, :class => "form-control" %>
      <%= city.label :location, "location(十進制)" %>
      <%= city.text_field :location %>

    <p> "Upload city_images" </p>
    <%= file_field_tag "city_images[]", type: :file%>

    <% end %>
  </div>

  <div class="form-group">
    <%= fields_for @country do |country| %>
    <%= country.label :name, "Country" %>
    <%#= country.text_field :name %>
    <%= country.select :name, Country.all.map{ |c| [c.name, c.name] },{},include_blank: true, :class => "form-control", style: "width: 20%" %>
    <% end %>
  </div>

	<div class="form-actions btn-group">
    <%= w.submit "Create", :class => "btn btn-primary" %>
    <%= link_to "Cancel", admin_windows_path, :class => "btn btn-danger" %>
  </div>
<% end %>

<script>
  $('#country_name').select2();
  $('#city_name').select2();
</script>