<h1>Edit Quotes</h1>

<%= form_for [:admin, @quote] do |q| %>
<div class="form-group">
	<%= q.label :content, "Content" %>
	<%= q.text_area :content %>
</div>

<div class="form-group">
  <%= q.label :author, "Author" %>
  <%= q.text_field :author %>
</div>

<div class="form-actions btn-group">
	<%= q.submit "Update", :class => "btn btn-primary" %>
	<%= link_to "Cancel", admin_quotes_path, :class => "btn btn-danger" %>
</div>

<% end %>