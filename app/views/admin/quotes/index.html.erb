<h1>All Quotes</h1>
<%= link_to "New Quotes", new_admin_quote_path, class: "btn btn-success"%>
<table class="table table-hover">
  <thead>
    <tr>
      <td>Quote List</td>
    </tr>
  </thead>
  <tbody>
  	<% @quotes.each do |quote|%>
	  	<tr>
	  		<th><%= link_to quote.content, edit_admin_quote_path(quote) %></th>
	  		<th><%= link_to "Delete", admin_quote_path(quote), :method => :delete ,:data =>{ :confirm => "Are you sure?"}, class:"btn btn-danger" %></th>
	  	</tr>
	  <% end %>
  </tbody>
</table>

<!--分頁套件></!-->
<%= paginate @quotes, :theme => 'twitter-bootstrap-3' %>

<h2>Import Quotes</h2>
<%= form_tag import_admin_quotes_path, multipart: true do %>
  <%= file_field_tag :file %>
  <br>
  <%= submit_tag "Import" %>
<% end %>
<hr>
<div>
<%= link_to "Back to windows", admin_windows_path, class:"btn btn-info"%>
</div>